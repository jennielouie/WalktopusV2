<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><a href="/walks/new">Walktopus</a></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class="has-dropdown">
        <a href="#">Options</a>
        <ul class="dropdown">
          <li><a href="/walks/new">Preview a New Route</a></li>
          <!-- <li><a href="/walks">See All Previewed Walks</a></li> -->
        </ul>
      </li>
    </ul>
