<div class="row" id="indexTitle">
  <div class="small-8 small-offset-2 centered columns">
    <h3>Walktopus Walking Routes</h3>
  </div>
</div>

<div class='small-8 small-offset-2 centered columns' id="walk_summary">
  <table>
    <thead>
      <tr>
        <th>Click on a Walk to See the Sights!</th>
      </tr>
    </thead>

    <tbody>
      <% @walks.each do |walk| %>
      <tr>
        <td><a href="walks/<%=walk.id %>">Walk #<%=walk.id%>: From <%=walk.start%> to <%=walk.end%></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
